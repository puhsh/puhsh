- content_for :nav do
  = render 'shared/nav'

.row#post-images

.row#post
  .small-12.columns.small-text-center#heading
    %h1= @post.title

.row#user
  .small-5.small-centered.columns
    #avatar.left
      = image_tag facebook_avatar_url(@user, :normal)
    #personal-details.left
      %h4 Posted By:
      %h3
        %strong= @user.name
      %h3
        %strong.gold
          %i.fa.fa-star
          %strong= @user.star_count
