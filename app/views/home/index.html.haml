- content_for :nav do
  = render 'shared/nav'
  .container
    - if !user_signed_in?
      .row
        .col-mid-12 
          = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: 'btn btn-primary'
    - else
      - if current_user.has_role?(:admin)
        %h4= "Current directory: #{Rails.root.to_s}"
