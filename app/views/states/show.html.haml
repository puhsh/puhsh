- content_for :title do
  %title= "#{@current_state_name}, US"

- content_for :header do
  = render 'shared/header'

= render 'shared/search_social', search_url: search_states_path, term: @term, page_header_text: "Select a City to View Posts", use_small_heading: true

%section.row
  %article.small-12.columns
    %h1="#{@current_state_name}, US"
    .row
      - @cities.each_slice(25) do |cities|
        .small-12.columns(class="#{column_class(@cities)}")
          %ul.no-bullet.list
            - cities.each do |city|
              %li.column
                %strong= link_to city_state_name(city), city_path(name: city.full_state_name, city_name: city.name)

%section.row
  %article.small-12.columns.pagination-centered
    = paginate @cities
