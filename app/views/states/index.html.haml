- content_for :title do
  %title= "United States"

- content_for :header do
  = render 'shared/header'

= render 'shared/search_social', search_url: search_states_path, term: nil, page_header_text: "Select a State to View Cities", use_small_heading: true

%section.row
  %article.small-12.columns
    %h1 UNITED STATES
    .row
      - @states.each_slice(22) do |states|
        .small-12.medium-4.columns
          %ul.no-bullet.list
            - states.each do |state|
              %li.column
                %a(href="#{state_path(name: state.full_state_name.downcase)}")
                  %strong= state.full_state_name
