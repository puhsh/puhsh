- content_for :og do
  = global_meta_tags title: @post.title, description: "#{@post.description}, #{@user.location_description}, in #{city_state_name(@user.home_city)}", url: request.url, image: @post.post_images.first.image.url(:small), latitude: @user.latitude, longitude: @user.longitude, :street_address => @user.location_description, locality: @user.home_city.name, region: @user.home_city.state, country_name: 'USA', postal_code: @user.zipcode

- content_for :title do
  %title= "#{@post.title} - #{@user.name} (#{@user.home_city.name}, #{@user.home_city.state.upcase})"

- content_for :meta do
  %meta(name="keywords" content="#{seo_keywords(@post.title)}")
  %meta(name="description" content="The latest item for sale from #{@user.name} in #{city_state_name(@user.home_city)}: #{@post.title}: #{@post.description}, #{post_time_posted(@post)}")
  %meta(name="subject" content="#{@post.title}, #{post_price(@post.item)}, #{city_state_name(@user.home_city)}, #{@user.name}, Online Garage Sale")
  - if @last_question
    %meta(name="revised" content="#{@last_question.created_at}")
  %meta(name="abstract" content="#{@post.title}, #{@post.description}, #{@user.name}, #{city_state_name(@user.home_city)}, #{@post.category_name.value}, #{@post.subcategory_name.value}")
  %meta(name="topic" content= "#{@post.title}, #{@post.category_name.value}, #{@post.subcategory_name.value}")
  %meta(name="summary" content="#{@user.name} just posted #{@post.title} for sale in #{city_state_name(@user.home_city)} on Puhsh on #{post_time_posted(@post)}")
  %meta(name="Classification" content="Product")
  %meta(name="author" content="#{@user.name}, #{city_state_name(@user.home_city)}, #{city_user_url(user_id: @user.slug, city_id: @user.home_city.slug)}")
  %meta(name="designer" content="#{@user.name}, #{city_state_name(@user.home_city)}")
  %meta(name="copyright" content="#{post_time_posted(@post)}")
  %meta(name="owner" content="#{@user.name}, #{city_state_name(@user.home_city)}")
  %meta(name="url" content="#{request.url}")
  %meta(name="identifier-URL" content="#{request.url}")
  %meta(name="directory" content="submission")
  %meta(name="category" content="#{@post.category_name.value} #{@post.subcategory_name.value}")
  %meta(name="twitter:card" content="product")
  %meta(name="twitter:site" content="#{request.url}")
  %meta(name="twitter:creator" content="#{@user.name}, @puhsh")
  %meta(name="twitter:title" content="#{@post.title}")
  %meta(name="twitter:description" content="#{@post.description}")
  %meta(name="twitter:image" content="#{@post.post_images.first.image.url(:medium)}")

  - if @post.item
    %meta(name="twitter:data1" content="#{humanize_money(@post.item.price)}")
    %meta(name="twitter:label1" content="Price")

  %meta(name="twitter:data2" content="#{city_state_name(@user.home_city)}")
  %meta(name="twitter:label2" content="Location")

- content_for :header do
  = render 'shared/header'

.row
  .small-12.columns
    .right
      %a.button.square.facebook.with-share-text(onclick="FB.ui({method:'feed', link: '#{facebook_share_this_url(@post)}'}, function(response){});")
        %i.fa.fa-facebook.fa-2x
      %a.button.square.twitter(href="#{twitter_tweet_this_url(@post)}")
        %i.fa.fa-twitter.fa-2x
      %a.button.square.pinterest(href="#{pinterest_pin_it_url(@post)}")
        %i.fa.fa-pinterest.fa-2x


#post(itemscope itemtype='http://schema.org/Product')
  .row#images
    .small-12.large-12.columns
      %ul.image-list.clearing-thumbs(class="#{post_image_list_class(@image_count)}" data-clearing)
        - @post.post_images.each do |image|
          %li
            %a(href="#{image.image.url}")
              = image_tag image.image.url(:medium)

  .row#heading
    .small-12.columns.text-center
      %h1(itemprop='name')
        = @post.title
        #price-container(itemprop='offers' itemscope itemtype='http://schema.org/Offer')
          - if @post.sold?
            %span.price-inline(itemprop='price') SOLD
          - else
            %span.price-inline(itemprop='price')= post_price(@post.item)

  .row#seller-info
    .small-12.medium-6.small-centered.medium-centered.columns
      .user-info.with-posted-by
        = image_tag @post.user.other_avatar_urls[:large], class: 'avatar', alt: @user.name
        %span.posted-by Posted By:
        %h3.name
          %strong= link_to @post.user.name, city_user_path(user_id: @post.user.slug, city_id: @post.city.slug)
        %h3.gold.star-count
          %strong= @post.user.star_count

  .row#post-details
    .small-12.medium-6.small-centered.medium-centered.columns
      %ul.no-bullet.detailed-list
        %li 
          %p.text-label
            %strong Posted:
          %p= post_time_posted(@post)
        %li 
          %p.text-label
            %strong Category:
          %p= post_category_display_name(@post)
        %li 
          %p.text-label
            %strong Location:
          %p= post_location_name(@post.user)
        %li
          %p.text-label
            %strong Pick up: 
          %p 
            = post_pickup_location_name(@post)
            %a(href='#' data-reveal-id='pickup-help' data-reveal)
              %i.fa.fa-question-circle
        %li
          %p.text-label
            %strong Details:
          %span(itemprop='description')= @post.description

  = render 'shared/modals/pickup_help'
